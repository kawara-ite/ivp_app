<%= form_with model: @admin, url: admin_registration_path, method: :put, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      管理者情報入力
    </h1>
  </div>

  <%= render "admins/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ログインID</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :loginid, class:"input-default", placeholder:"社員番号" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">氏名</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :name, class:"input-default", placeholder:"フルネーム" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">所属</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :affiliation, class:"input-default" %>
  </div>

  <div class='register-btn'>
    <%= f.submit "管理者登録" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>